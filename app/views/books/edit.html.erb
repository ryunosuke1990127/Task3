<h1>Editing Book</h1>
<% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @books do |f| %>
<p>Title</p>
<%= f.text_field :title%>
<p>Option</p>
<%= f.text_area :body%>
<%= f.submit "Update Book"%>
<% end %>