<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
<body>
  <main>
    <div class="container">
        <div class="row">
          <div class="mx-auto">
          <h1>Editing Book</h1>
          <% if @books.errors.any? %>
            <%= @books.errors.count %>件のエラーが発生しました
            <ul>
              <% @books.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @books do |f| %>
          <p>Title</p>
          <%= f.text_field :title%>
          <p>Option</p>
          <%= f.text_area :body%>
          <p><%= f.submit "Update Book"%></p>
          <% end %>
          <p><%= link_to "show",user_path(@books.user.id)%> | <%= link_to "Back",books_path%>
      </div>
    </div>
  </div>
    </main>
  </body>
</html>