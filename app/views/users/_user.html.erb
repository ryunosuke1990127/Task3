<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="book.scss"/>
  </head>

  <body>
<!--部分テンプレートの設定-->
<!--ログインしているユーザーの情報取得-->
        <div class= "container">
          <div class="row">
            <div class="col3">
                      <h1>User info<h1>
                      <%= image_tag @user.get_profile_image(100,100) %>
                      <table class="table">
                        <td>
                          <!--表内の空白設定-->
                          <tr></tr>
                          <!--ユーザー名-->
                          <tr>
                          <th class="name">name</th>
                          <th class="name"><%= @user.name%></th>
                       　  </tr>
                       　<!--自己紹介欄-->
                       　<tr>
                       　  <th class="name">introduction</th>
                       　  <th class="name"><%= @user.introduction %></th>
                       　</tr>
                        </td>
                      </table>
                      <a class="btn btn-secondary btn-lg btn-block" href= "/users/<%=@user.id %>/edit"><i class="fa-solid fa-user-pen"></i></a>
              <!--投稿用のフォーム作成-->

                      <h1>New Book</h1>
                      <%= form_with model: @book do |f|%>
                      <h4>Title</h4>
                      <%= f.text_field :title %>
                      <h4>Option</h4>
                      <%= f.text_area :body %>
                      <%= f.submit 'Create Book'%>
              <% end %>
        </div>
      </div>
    </div>
  </body>
</html>