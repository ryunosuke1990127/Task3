<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
<body>
  <main>
    <div class="container">
        <div class="row">
          <div class="mx-auto">
            <h1>User info</h1>
            <!--入力内容に不備があった際の処理-->
            <% if @user.errors.any? %>
              <%= @user.errors.count %>件のエラーが発生しました。
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <%= form_with model: @user do |f|%>
            <p><label for="inputName">Name</label></p>
            <%= f.text_field :name ,autofocus: true, id:"inputName", placeholder:"名前"%>
            <p><label for="inputImage">Image</label></p>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <p><label for="inputIntroduction">Introduction</label></p>
            <%= f.text_field :introduction ,autofocus: true, id:"inputIntroduction", placeholder:"紹介"%>
            <p><%= f.submit "Update User" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
