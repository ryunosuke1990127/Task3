<h1>Books#index</h1>
<!--ログインしているユーザーの情報取得-->
<h1>User info<h1>
<%= @user.name%>
<%= @user.introduction %>
<%= image_tag @user.get_profile_image %>
<p><%= link_to "ユーザー編集",edit_user_path(@user.id)%></p>

<!--投稿用のフォーム作成-->
<h1>New Book</h1>
<%= form_with model: @book do |f|%>
<h4>Title</h4>
<%=f.text_field :title %>
<h4>Option</h4>
<%=f.text_area :body %>
<%=f.submit 'Create Book'%>
<% end %>

<!--そのユーザーが登録した本情報の表示-->
<h4>Book details</h4>
<% @user_book.each do | book |%>
<div>
  <p>ユーザープロフィール</p>
  <p>Title:
  <%= link_to book_path(book.id) do %><%= book.title %>
  <% end %></p>
  <p>Option:<%= book.body %></p>
</div>
<% end %>